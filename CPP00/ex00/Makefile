FLAGS = -Wall -Wextra -Werror -std=c++98
SRC = megaphone.cpp
NAME = megaphone

all: $(NAME)

$(NAME): $(SRC)
	c++ $(FLAGS) $(SRC) -o $(NAME)
	
clean:

fclean:
	rm -rf $(NAME)

re: fclean all

.PHONY: all, clean, fclean, re